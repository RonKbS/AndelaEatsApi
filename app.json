{
    "name": "AndelaEatsApi",
    "description": "",
    "scripts": {
        "postdeploy": "flask seed-database --testing"
    },
    "env": {
        "ANDELA_API_TOKEN": {
            "required": true
        },
        "API_AUTH_URL": {
            "required": true
        },
        "APP_ENV": "testing",
        "DATABASE_TEST_URL": {
            "required": true
        },
        "BUGSNAG_API_KEY": {
            "required": true
        },
        "BUGSNAG_PROJECT_ROOT": {
            "required": true
        },
        "FLASK_APP": {
            "required": true
        },
        "JWT_PUBLIC_KEY": {
            "required": true
        },
        "JWT_PUBLIC_KEY_STAGING": {
            "required": true
        },
        "REDIS_URL": {
            "required": true
        },
        "SECRET_KEY": {
            "generator": "secret"
        },
        "SLACK_TOKEN": {
            "required": true
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "addons": [
        {
            "plan": "heroku-postgresql",
            "as": "DATABASE_TEST"
        },
        "heroku-redis"
    ],
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ],
    "stack": "heroku-18"
}